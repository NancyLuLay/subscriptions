%h1 Address Form

= @address.errors.full_messages.join(", ")
= form_for @address do |f|
  = f.label :address
  = f.text_field :address

  = f.label :city
  = f.text_field :city

  = f.label :province
  = f.text_field :province

  = f.label :postal_code
  = f.text_field :postal_code

  = f.label :country
  = f.text_field :country

  = f.label :phone
  = f.text_field :phone

  .btn-center
    =f.submit nil, class: "btn btn-primary"
