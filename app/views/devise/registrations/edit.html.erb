<div class="background-image"></div>
<div class="content-body-sessions">
<h2 class="center">Edit <%= resource_name.to_s.humanize %></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= devise_error_messages! %>

  <div class="form-group field-padd">
    <%= f.label :first_name, class: "form-control-label" %><br />
    <%= f.text_field :first_name, autofocus: true, class:"form-control" %>
  </div>

  <div class="form-group field-padd">
    <%= f.label :last_name, class: "form-control-label" %><br />
    <%= f.text_field :last_name, autofocus: true, class:"form-control" %>
  </div>


  <div class="form-group field-padd">
    <%= f.label :profile_picture, class: "form-control-label" %><br />
    <%= f.file_field :profile_picture, autofocus: true, class:"form-control" %>
  </div>
  <%=  image_tag @current_user.profile_picture.url(:large) %>

  <div class="form-group field-padd">
    <%= f.label :email, class: "form-control-label" %><br />
    <%= f.email_field :email, autofocus: true, class:"form-control" %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="form-group field-padd">
    <%= f.label :password, class: "form-control-label" %> <i>(leave blank if you don't want to change it)</i><br />
    <%= f.password_field :password, autocomplete: "off", class:"form-control" %>
    <% if @minimum_password_length %>
      <br />
      <em><%= @minimum_password_length %> characters minimum</em>
    <% end %>
  </div>

  <div class="form-group field-padd">
    <%= f.label :password_confirmation, class: "form-control-label" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off", class:"form-control" %>
  </div>


  <div class="actions btn-form">
    <%= f.submit "Update", class: "btn-submit" %>
  </div>
<% end %>

<h3 class="unhappy">Cancel my account</h3>

<p>Unhappy?
<div class="btn-div">
  <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: 'btn-cancel' %></p>
</div>
<%= link_to "Back", :back %>

</div>
